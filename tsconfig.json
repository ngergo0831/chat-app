{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "rootDir": "src",
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "typeRoots": [
            "./src/@types",
            "./node_modules/@types"
        ],
    },
    "exclude": [
        "node_modules",
        "data"
    ]
}